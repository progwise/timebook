{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "graphql:generate"],
      "outputs": ["dist/**", ".next/**"],
      "env": ["NEXTAUTH_URL"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "dependsOn": ["migrate-db"]
    },
    "prisma-studio": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^fake"]
    },
    "e2e-tests": {
      "dependsOn": ["^fake"],
      "cache": false
    },
    "migrate-db": {
      "inputs": ["**/migration.sql"],
      "cache": false
    },
    "graphql:generate": {
      "inputs": ["**/*.graphql", "../../packages/backend/**/schema.graphql"],
      "outputs": ["**/graphql.ts"]
    },
    "typecheck": {
      "outputs": []
    },
    "fake": {
      "inputs": [],
      "outputs": []
    }
  },
  "globalEnv": ["GITHUB_CLIENT_ID", "GITHUB_CLIENT_SECRET", "NODE_ENV", "SECRET"]
}
