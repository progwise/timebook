{
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": ["node_modules", "**/mocks/*.ts"],
  "include": ["./jest-setup.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "lib": ["ES2022", "dom", "dom.iterable", "esnext", "ESNext.Array"],
    "types": ["jest", "node", "next", "react", "react-dom", "jest-dom", "@testing-library/jest-dom"],
    "jsx": "react-jsx"
  }
}
