{
  "extends": "tsconfig/react-library.json",
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.tsx", "**/*.spec.ts", "**/mocks/*.ts"],
  "include": ["./jest-setup.ts", "next-env.d.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext", "DOM"],
    "types": ["jest", "node", "next", "react", "react-dom"]
  }
}
